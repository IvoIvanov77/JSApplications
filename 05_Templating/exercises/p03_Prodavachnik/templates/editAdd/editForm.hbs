<form id="formEditAd" class="form" action="#/edit" method="post">
    <div><input type="hidden" name="id" value="{{item._id}}" required /></div>
    <div><input type="hidden" name="publisher" required /></div>
    <div>Title:</div>
    <div><input type="text" name="title" value="{{item.title}}" required /></div>
    <div>Description:</div>
    <div><textarea name="description" rows="10" required>{{item.description}}</textarea></div>
    <div>Date Published:</div>
    <div><input type="date" name="datePublished" required  value="{{item.date}}"/></div>
    <div>Price:</div>
    <div><input type="number" step="0.01" name="price" value="{{item.price}}" required /></div>
    <div><input type="submit" id="buttonEditAd" value="Edit" /></div>
</form>