<form id="create-entry-form" action="add_entry" method="post" >
    <div class="col wide">
        <input name="type" placeholder="Product name">
    </div>
    <div class="col wide">
        <input name="qty" oninput="showInfo()" placeholder="Quantity">
    </div>
    <div class="col wide">
        <input name="price" oninput="showInfo()" placeholder="Price per Unit">
    </div>
    <div class="col" id="sub_total">Sub-total</div>
    <div class="col">
        <input id="addItemBtn" type="submit" value="Add"  />
    </div>
</form>